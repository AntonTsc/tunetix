<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Evitar reescribir si el archivo o directorio existe
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Reescribir todo lo dem√°s a index.html
  RewriteRule ^ index.html [L]
</IfModule>